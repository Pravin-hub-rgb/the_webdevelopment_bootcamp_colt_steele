<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title"> <!-- grouping all values inside 'campground' -->
            </div>
            <div class="mb-3">
                <label class="form-label"  for="loc">Location</label>
                <input class="form-control"  type="text" name="campground[location]" id="loc"> 
            </div>
            <div class="mb-3">
                <label class="form-label"  for="price-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price-label" name="campground[price]">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label"  for="img">Image Url</label>
                <input class="form-control"  type="text" name="campground[image]" id="img"> 
            </div>
            <div class="mb-3">
                <label class="form-label"  for="des">Description</label>
                <textarea class="form-control"  type="text" name="campground[description]" id="des"> </textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
            <a href="/campgrounds">All Campgrounds</a>
        </form>
    </div>
</div>
    
