<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" value="<%=campground.title%>" required> <!-- grouping all values inside 'campground' -->
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label"  for="loc">Location</label>
                    <input class="form-control"  type="text" name="campground[location]" id="loc" value="<%=campground.location%>" required> 
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label"  for="price-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price-label" name="campground[price]" value="<%=campground.price%>" required>
                        <div class="valid-feedback">Looks Good!</div>
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label"  for="img">Image Url</label>
                    <input class="form-control"  type="text" name="campground[image]" id="img" value="<%=campground.image%>" required> 
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label"  for="des">Description</label>
                    <textarea class="form-control"  type="text" name="campground[description]" id="des" required><%=campground.description%></textarea>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Campground</button>
                </div>
                <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">Back to Campground</a>
            </form>
        </div>
    </div>
        
    